<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/DKtaikhoan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:hint=" Nhập tài khoản" />

    <EditText
        android:id="@+id/DKmatkhau"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:hint=" Nhập mật khẩu"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/NLMatKhau"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:hint=" Nhập lại mật khẩu"
        android:inputType="textPassword" />

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/region"
            android:hint="+84"
            android:layout_width="60dp"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/Sodienthoai"
            android:layout_width="316dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:hint="Nhập số điện thoại" />
    </LinearLayout>

    <EditText
        android:id="@+id/MaOtp"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:hint="Mã Otp " />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/SenOtp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send Otp" />

        <TextView
            android:id="@+id/Resend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Didn't receive otp code ? Resend."
            android:textColor="#2196F3" />

    </LinearLayout>

    <TextView
        android:id="@+id/DangKyMK"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="Đăng ký"
        android:textColor="#00BCD4"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/Quaylai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        android:text="Quay lại "
        android:textColor="#673AB7" />
</LinearLayout>
