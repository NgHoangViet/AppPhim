<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.java_co_ban">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".Login.Myapp"
        android:allowBackup="true"
        android:icon="@drawable/backgroud"
        android:label="@string/app_name"
        android:roundIcon="@drawable/emilia"
        android:supportsRtl="true"
        android:theme="@style/Theme.Java_co_Ban">

        <activity
            android:name=".ChangePassWord.ChangePassWordActivity"
            android:exported="true" />
        <activity
            android:name=".Forget.ForgetActivity"
            android:exported="true" />
        <activity
            android:name=".PlayFilm.PlayFilmActivity"
            android:exported="true"
            android:configChanges="orientation|screenSize|screenLayout|keyboardHidden"
            android:launchMode="singleTask" />
        <activity
            android:name=".SearchDislay.SearchActivity"
            android:exported="true" />

        <activity
            android:name=".data_local.RegisterActivity"
            android:exported="true" />

        <service
            android:name=".fcm.MyFirebaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <activity
            android:name=".Login.LoginActivity"
            android:exported="true"/>
        <activity android:name=".Intro.IntroActivity"
            android:exported="true">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Anime.AnimeActivity" />
    </application>

</manifest>